<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NJULoginTest">
    
    <DataTemplate x:Key="Data_ListItem">
        <StackPanel>
            <TextBlock HorizontalAlignment="Left" Text="{Binding Path=Title}" Foreground="{StaticResource SystemControlForegroundAccentBrush}" FontSize="18" Margin="0,5,0,0"/>
            <TextBlock HorizontalAlignment="Left" Text="{Binding Path=Content}" FontSize="24" Margin="0,0,0,5"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
